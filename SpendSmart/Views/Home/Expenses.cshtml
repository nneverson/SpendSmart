@{
	ViewData["Title"] = "Expenses";
}
@model List<Expense>

<div class="text-center">
	<h1 class="display-4">Expenses</h1> <a asp-action="CreateEditExpenses" class="btn btn-secondary">Create New</a>
	<br />
	<hr/>
	<h3>Total Expences $@ViewBag.Expenses</h3>
	<br/>
	<table class="table">
		<thread>
			<tr>
				<th>
					ID
				</th>
				<th>
					Value
				</th>
				<th>
					Description
				</th>
				<th>Actions</th>
			</tr>
		</thread>
		<tbody>
			@{
				foreach (var expense in Model)
				{
					<tr>
						<td>
						@expense.Id
						</td>
						<td>
							@expense.Value
						</td>
						<td>
							@expense.Description
						</td>
						<td>
							<a asp-action="CreateEditExpenses" asp-route-id="@expense.Id">Edit</a>
						<a asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
						</td>
					</tr>

				}
			}
		</tbody>
	</table>
</div>
